{
  "env": {
    "es6": true,
    "browser": true
  },
  "globals": {
    "require": false,
    "process": false,
    "__dirname": false,
    "module": false
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "js": true,
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "strict": 0,
    "indent": [
      2,
      2
    ],
    "linebreak-style": [
      2,
      "unix"
    ],
    "quotes": [
      2,
      "single"
    ],
    "semi": [
      2,
      "never"
    ]
  }
}
